{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "tests"
  ],
}