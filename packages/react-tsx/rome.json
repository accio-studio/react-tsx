{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "noUselessFragments": "off"
      },
      "nursery": {
        "all": false
      }
    },
    "ignore": ["dist", ".turbo"]
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineWidth": 120,
    "ignore": ["dist", ".turbo"]
  },
  "organizeImports": {
    "enabled": true
  }
}
